{
    "manifest_version": 3,
    "name": "HelpMeOut",
    "version": "1.0",
    "description": "Record your screen with this cool extension.",
    "permissions": ["activeTab", "storage", "desktopCapture", "tabs", "scripting"],
    "action": {
      "default_popup": "popup.html",
      "default_title": "HelpMeOut",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "host_permissions": [
          "http://*/",
          "https://*/*"
      ],
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }